<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Community </title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrapLux.css" rel="stylesheet" />
    
    <link href="~/css/ModifyBootstrap.css" rel="stylesheet" />
</head>



<body>
    <header>
        <div>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

                <button class="navbar-toggler" aria-expanded="false" aria-controls="navbarColor01" aria-label="Toggle navigation" type="button" data-target="#navbarColor01" data-toggle="collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">

                        <li class="navbar-nav mr-auto">

                            <a class="nav-link" href="https://localhost:44355/Identity/Account/Register"> Register </a>
                        </li>
                        <li class="navbar-nav mr-auto">

                            <a class="nav-link" href="https://localhost:44355/Identity/Account/Login"> Login </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-Controller="Home" asp-action="Index"> Home </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-Controller="Resident" asp-action="Index"> Resident List </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Resident" asp-action="Create"> Add Resident </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-Controller="InformationBoard" asp-action="Index"> Message Board </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-Controller="InformationBoard" asp-action="Create"> Add Message </a>
                        </li>
                        <li class="nav-item">
                            <a class=" nav-link" asp-controller="Search" asp-action="Search">Search Residents</a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link" asp-controller="Resident" asp-action="Index">Send Text Alert</a>

                        </li>
                        <li class="nav-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                            </form>
                        </li>


                    </ul>

                </div>
            </nav>
            </div>
    </header>
    <div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>
    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
    
</html>
